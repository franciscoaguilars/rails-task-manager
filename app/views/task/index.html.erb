<h1>My tasks</h1>
<% @tasks.each do |task| %> 
<p><input type ="checkbox" <%= "checked" if task.completed %>><%= link_to task.title, "/task/#{task.id}" %></p> <%= link_to 'Destroy this task', "/task/#{task.id}", method: :delete, data: {confirm: "Are you sure?"}%>
<% end %>
<p><%= link_to "Add a new task", "/task/new" %></p>